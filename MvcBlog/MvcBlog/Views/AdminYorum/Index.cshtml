@model IEnumerable<MvcBlog.Models.Yorum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Yorumlar</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("Başlık")
        </th>
        <th>
            @Html.Label("Kullanıcı Adı")
        </th>
        <th>
            @Html.Label("İçerik")
        </th>
        <th>
            @Html.Label("Tarih")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Makale.Baslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uye.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icerik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.YorumID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Detay", "Details", new { id=item.YorumID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.YorumID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
