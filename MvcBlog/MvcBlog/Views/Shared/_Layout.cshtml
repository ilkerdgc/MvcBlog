
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>DGC Blog</title>
    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Content/css/blog-home.css")" rel="stylesheet">
    <script src="@Url.Content("~/Content/bootstrap.min.js")"></script>
    <link href="@Url.Content("~/Content/css/bootstrap-tagsinput.css")" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav style="background-color:black" class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index"><img width="95" src="~/image/logo.png"/></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimizda">Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim">İletişim</a>
                    </li>

                    <ul class="nav">
                        <li class="dropdown">
                            @if (Session["UyeID"] != null)
                            {
                                <a href="#" class="dropdown-toggle nav-link" style="color:white" data-toggle="dropdown">@Session["KullaniciAdi"].ToString()<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="/Uye/Index/@Session["UyeID"]">@Session["KullaniciAdi"].ToString() Profil</a>
                                    </li>
                                    @if (Convert.ToInt32(Session["YetkiID"]) == 1)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="/Admin/Index" target="_blank">Admin Paneli</a>
                                        </li>
                                    }
                                    <li class="divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/Uye/Logout">Çıkış</a>
                                    </li>
                                </ul>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Uye/Create">Kayıt Ol</a>
                            </li>
                            }

                        </ul>        
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page Content -->
        <div class="container">
            <div class="row">
                <!-- Blog Entries Column -->
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <!-- Sidebar Widgets Column -->
                <div class="col-md-4">
                    <!-- Search Widget -->
                    <div class="card my-4">
                        @Html.Partial("_BlogAraPartial")
                    </div>
                    <!-- Categories Widget -->
                    <div class="card my-4">
                        @{
                            Html.RenderAction("_KategoriPartial", "Home");
                        }
                    </div>
                    <!-- Side Widget -->
                    <div class="card my-4">
                        @{
                            Html.RenderAction("_PopulerMakalelerPartial", "Home");
                        }
                    </div>
                    <div class="card my-4">
                        @{
                            Html.RenderAction("_SonYorumlarPartial", "Home");
                        }
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
        <!-- Footer -->
        <footer style="background-color:black" class="py-5">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright © İlker DAĞCI @DateTime.Now.Year</p>
            </div>
            <!-- /.container -->
        </footer>
        <!-- Bootstrap core JavaScript -->
        <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/gridmvc.js")" type="text/javascript"> </script>
        <link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Content/vendor/jquery/jquery.min.js")"></script>
        <script src="@Url.Content("~/Content/vendor/popper/popper.min.js")"></script>
        <script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.min.js")"></script>
        <script src=@Url.Content("~/Content/js/bootstrap-tagsinput.js")></script>
        <script src=@Url.Content("~/Content/js/bootstrap-tagsinput-angular.js")></script>
        @RenderSection("script", required: false)
    </body>
</html>
