@model IEnumerable<MvcBlog.Models.Uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Üyeler</h2>
<table class="table">
    <tr>
        <th>
            @Html.Label("Yetki:")
        </th>
        <th>
            @Html.Label("Kullanıcı Adı:")
        </th>
        <th>
            @Html.Label("E-Mail:")
        </th>
        <th>
            @Html.Label("Şifre:")
        </th>
        <th>
            @Html.Label("Ad Soyad:")
        </th>
        <th>
            @Html.Label("Foto:")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            <img src="@item.Foto" width="60" style="border-radius:50%" alt="" />
        </td>
        <td>
            @Html.ActionLink("Detay", "Details", new { id=item.UyeID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UyeID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
