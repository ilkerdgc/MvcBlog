@model MvcBlog.Models.Kategori

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4>Kategori Detay</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Kategori Adı")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KategoriAdi)
